CString CPpEngineConfig::GetPpEngineConfigFile()
{
	CString strFile;
	strFile = _P_GetConfigPath();
	strFile += _T("Pp-engine-config.xml");
	return strFile;
}

void CPpEngineConfig::ReadPpEngineConfig()
{
	CString strFile;
	strFile = GetPpEngineConfigFile();
	OpenXmlFile(strFile, CPpEngineConfigXmlRWKeys::CPpEngineConfigKey(), CPpEngineConfigXmlRWKeys::g_pXmlKeys);
}

void CPpEngineConfig::SavePpEngineConfig()
{
	CString strFile;
	strFile = GetPpEngineConfigFile();
	SaveXmlFile(strFile, CPpEngineConfigXmlRWKeys::g_pXmlKeys);
}
