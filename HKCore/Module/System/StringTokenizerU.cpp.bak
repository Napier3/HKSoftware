CStringTokenizerU::CStringTokenizerU()
{
	m_pData = NULL;
	m_chDelimiter = ' ';
	m_pIndex = NULL;
	m_nLength = 0;
}

CStringTokenizerU::CStringTokenizerU(const char *pszDataLine)
{
	m_pData = NULL;
	m_chDelimiter = ' ';
	m_pIndex = NULL;
	m_nLength = 0;
	
	Init(pszDataLine,' ');
}

CStringTokenizerU::CStringTokenizerU(const char *pszDataLine,char chDelimiter)
{
	m_pData = NULL;
	m_chDelimiter = ' ';
	m_pIndex = NULL;
	m_nLength = 0;
	Init(pszDataLine,chDelimiter);
}

CStringTokenizerU::~CStringTokenizerU()
{
	Free();
}

void CStringTokenizerU::Free()
{
	if (m_pData != NULL)
	{
		delete m_pData;
		m_pData = NULL;
	}

	m_pIndex = NULL;
	m_nLength = 0;
}

void CStringTokenizerU::Format(char chDelimiter)
{
	m_pData[m_nLength] = chDelimiter;
	m_pData[m_nLength+1] = 0;

	char *pTemp = m_pData;
	while (*pTemp != 0)
	{
		if (*pTemp == chDelimiter)
		{
			*pTemp = 0;
		}
		pTemp++;
	}

	m_pIndex = m_pData;
}

void CStringTokenizerU::Init(const char *pszDataLine,char chDelimiter)
{
	Free();

	if (pszDataLine == NULL)
	{
		return;
	}

	m_chDelimiter = chDelimiter;
	m_nLength = strlen(pszDataLine) + 1;
	m_pData = new char [m_nLength+1];
	memcpy(m_pData,pszDataLine,m_nLength);

	Format(chDelimiter);
